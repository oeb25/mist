{
  "name": "mist-vscode-client",
  "version": "0.0.1",
  "repository": {
    "url": "https://github.com/oeb25/mist"
  },
  "engines": {
    "vscode": "^1.76.1"
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "package": "npm run esbuild && vsce package",
    "update": "npm run package && code --install-extension mist-vscode-client-*.vsix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.15.3",
    "@types/vscode": "^1.76.0",
    "@vscode/vsce": "^2.18.0",
    "esbuild": "^0.17.11",
    "typescript": "^4.9.5"
  },
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./out/main.js",
  "contributes": {
    "languages": [
      {
        "id": "mist",
        "extensions": [
          ".mist"
        ],
        "icon": {
          "light": "./mist-icon.png",
          "dark": "./mist-icon.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mist",
        "scopeName": "source.mist",
        "path": "./mist.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
