{
    "comments": {
        "lineComment": "//"
    },
    "brackets": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "{|",
            "close": "|}"
        },
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        }
    ],
    "surroundingPairs": [
        [
            "{|",
            "|}"
        ],
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "\"",
            "\""
        ],
        [
            "'",
            "'"
        ],
        [
            "<",
            ">"
        ]
    ],
    // "indentationRules": {
    //   "increaseIndentPattern": "^\\s*(Protocol|Types|Knowledge|Actions|Goals)\\b[^\\{;]*$",
    //   "decreaseIndentPattern": "^\\s*((end|else|elseif)|[}\\]]\b)"
    // },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}
