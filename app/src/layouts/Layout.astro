---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.sv" />
    <meta name="generator" content={Astro.generator} />
    <title>🍃 {title}</title>
  </head>
  <body class="bg-lime-50">
    <nav class="container mx-auto mb-5 border-b border-lime-800 pt-10 pb-5">
      <a
        class="flex items-center space-x-3 text-5xl font-thin text-lime-800"
        href="/"
      >
        <span class="text-3xl">🍃</span>
        <span>Mint</span>
      </a>
    </nav>
    <slot />
    <script src="/coi-serviceworker.js" is:inline></script>
  </body>
</html>
<style is:global></style>
