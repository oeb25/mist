struct List {
    next: List?,
    elem: int,
    ghost content: [int],
}

invariant List {
    (if this.next == null { this.content == [] } else { true }) &&
    (if this.next != null { this.content == [this.elem] + this.next.content } else { true })
}

fn create() -> List
    ensures result.content == []
{
    List { content: [] }
}
