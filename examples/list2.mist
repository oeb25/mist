struct List {
    next: ?List,
    elem: int,
    ghost content: [int],
}

invariant List {
    (if self.next == null { self.content == [] } else { true }) &&
    (if self.next != null { self.content == [self.elem] + self.next.content } else { true })
}

fn create() -> List
    ensures result.content == []
{
    List { content: [] }
}
